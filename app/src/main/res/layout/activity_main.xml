<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e9e9e9"

    xmlns:awesome="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/card_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#15000000"
        android:orientation="vertical" />

    <TextView
        android:id="@+id/lblQuestion"
        android:text="@string/hello_world"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="22sp"
        android:textColor="#dd212121"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        />

    <cyd.awesome.material.AwesomeText
        android:id="@+id/lblIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="150sp"
        android:textColor="@color/md_teal_500"
        android:layout_above="@id/lblQuestion"
        awesome:awesome_font="material_design"
        android:layout_centerHorizontal="true"
        awesome:awesome_icon="MD_HOME"
        android:elevation="6dp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lblQuestion"
        >


        <Button
            android:id="@+id/btnOne"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Primary"
            android:layout_margin="10dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"

            android:textSize="18sp"
            android:background="@drawable/button_material_rounded_indigo"
            android:textColor="#ddffffff"
            />

        <Button
            android:id="@+id/btnTwo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Primary"
            android:layout_margin="10dp"

            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"

            android:textSize="18sp"
            android:background="@drawable/button_material_rounded_indigo"
            android:textColor="#ddffffff"
            />



    </LinearLayout>



</RelativeLayout>
